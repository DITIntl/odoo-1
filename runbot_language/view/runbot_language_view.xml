<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!--inherit runbot.build-->
        <record id="view_build_form_inh_lang_01" model="ir.ui.view">
            <field name="model">runbot.build</field>
            <field name="inherit_id" ref="runbot.view_build_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="before">
                    <field name="lang"/>
                </xpath>
            </field>
        </record>
        
        <record id="view_build_tree_inh_lang_01" model="ir.ui.view">
            <field name="model">runbot.build</field>
            <field name="inherit_id" ref="runbot.view_build_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='port']" position="after">
                    <field name="lang"/>
                </xpath>
            </field>
        </record>
        
        <record id="view_build_search_inh_lang_01" model="ir.ui.view">
            <field name="model">runbot.build</field>
            <field name="inherit_id" ref="runbot.view_build_search"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='dest']" position="after">
                    <field name="lang"/>
                </xpath>
            </field>
        </record>
        
        <!--inherit runbot.prebuild-->
        <record id="view_prebuild_form_inh_lang_01" model="ir.ui.view">
            <field name="model">runbot.prebuild</field>
            <field name="inherit_id" ref="runbot_prebuild.view_prebuild_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="lang"/>
                </xpath>
            </field>
        </record>
        
        <record id="view_prebuild_tree_inh_lang_01" model="ir.ui.view">
            <field name="model">runbot.prebuild</field>
            <field name="inherit_id" ref="runbot_prebuild.view_prebuild_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="lang"/>
                </xpath>
            </field>
        </record>
        
        <record id="view_prebuild_search_inh_lang_01" model="ir.ui.view">
            <field name="model">runbot.prebuild</field>
            <field name="inherit_id" ref="runbot_prebuild.view_prebuild_search"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='script_posbuild']" position="after">
                    <field name="lang"/>
                </xpath>
            </field>
        </record>
    </data>
</openerp>
